#!/bin/bash

# result_code = 0, Miss, Safe
# result_code = 1, Hit, Danger
# result_code = 11, Danger Detail

# printf "vvvvvvvvvv Execute Check - $(basename $0) Start: vvvvvvvvvv\n "

while read line
do
  if [[ $line == "" || $line == \#* ]] ;then
    continue
  else
    check_result=`aws ec2 describe-security-groups --filters "Name=ip-permission.to-port,Values=${line}" --query 'SecurityGroups[?length(IpPermissions[?ToPort==\`'"${line}"'\` && contains(IpRanges[].CidrIp, \`0.0.0.0/0\`)]) > \`0\`].GroupId' --region $REGION --output text  | tr '\t' '\n' `
    result_code=0
    result_msg="No world wide open port found in security groups."
    result_detail=""
    array=(${check_result// / })
    # echo ${#array[*]}
    if [ "${#array[*]}" -gt "0" ];then
      result_code=1
      result_msg="---> Your service with Port ${line} is open to the world !!!"
      result_detail=$check_result
      printf "%s\n" "$result_msg"
      echo $result_code','$result_msg >> /tmp/check_result.log
    fi

    for dd in $result_detail
    do
      echo '11,'[$REGION]-SecurityGroup-Id:$dd >> /tmp/check_result.log
    done
  fi
done  < ./rules/sg_port_0000.properties

printf "%s\n" "$result_msg"
# printf "^^^^^^^^^^ Execute Check - $(basename $0) Completed. ^^^^^^^^^^\n "
